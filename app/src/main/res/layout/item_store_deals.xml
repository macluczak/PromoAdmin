<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="12dp"
        app:cardBackgroundColor="#FFFFFF"
        android:layout_marginBottom="3sp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/productImageView"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:scaleType="fitCenter"
                android:padding="5dp"
                android:src="@drawable/image_24" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:gravity="center"
                android:paddingStart="15dp"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/productNameTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:text="Product Name"
                    style="@style/PromoLabel.Black.Lato"
                    android:textColor="@color/tertiary_variant"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:gravity="left"
                    />

                <TextView
                    android:id="@+id/makerNameTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:text="Maker Name"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:gravity="left"
                    android:paddingBottom="2dp"
                    android:textColor="@color/primary_variant"
                    style="@style/PromoLabel.Black.LatoLight"
                    />


            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center|end">

                <TextView
                    android:id="@+id/promoPriceTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/PromoLabel.OrangeyRed.Lato"
                    tools:text="$9.99"

                    android:maxLines="1"
                    android:textSize="14dp"
                    android:padding="2dp" />

                <TextView
                    android:id="@+id/regularPriceTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/PromoLabel.Black.LatoLight"
                    tools:text="$19.99"
                    android:maxLines="1"
                    android:textSize="12sp"
                    android:paddingBottom="4dp"/>


            </LinearLayout>

            <LinearLayout
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:rotation="180"
                    android:src="@drawable/baseline_arrow_back_ios_24"/>

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>