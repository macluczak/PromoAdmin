<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    >

    <androidx.cardview.widget.CardView
        android:id="@+id/action_cv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="10sp"
        app:cardBackgroundColor="@color/white"
        android:layout_margin="5sp"
        app:cardCornerRadius="15sp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center">


            <ImageView
                android:id="@+id/storeActionImage"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_centerInParent="true"
                android:layout_weight="3"
                android:padding="15dp"
                android:scaleType="fitCenter"
                android:src="@drawable/image_24"
                app:tint="@color/tertiary"
                tools:src="@drawable/baseline_storefront_24" />

            <TextView
                android:id="@+id/storeActionName"
                android:gravity="left"
                style="@style/PromoLabel.Black.LatoBold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Store"
                android:textColor="@color/tertiary_variant"
                android:textSize="24dp"
                />

            <TextView
                android:id="@+id/storeActionDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingBottom="10dp"
                style="@style/PromoLabel.Black.Lato.Medium"
                android:textColor="@color/secondary"
                android:textSize="16dp"
                android:text="Modify Store Information"
                />

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>